<?xml version="1.0"?>
<ruleset name="custom">
    <description>Custom PHPCS standard.</description>

    <!-- Coding standard. -->
    <rule ref="Drupal"/>

    <!-- Show sniff codes in all reports -->
    <arg value="s"/>
    <!-- Show progress of the run. -->
    <arg value="p"/>
    <arg name="colors"/>

    <file>src</file>
    <file>template-simple-script.php</file>
    <file>tests/phpunit</file>
</ruleset>
